@model CadastroPessoas.Models.Pessoa

@{
    ViewBag.Title = "Lista";
}

<div class="container">

    <h2 class="page-header">Registro</h2>

    <div class="row">

        <div class="col-md-1">
            <b>Código</b>
            <div class="row">
                <div class="col-md-12">
                    <p>@Model.PessoaId</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <b>Nome Completo</b>
            <div class="row">
                <div class="col-md-12">
                    <p>@Model.Nome</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <b>Data de Nascimento</b>
            <div class="row">
                <div class="col-md-12">
                    <p>@Model.DataDeNascimento</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <b>RG</b>
            <div class="row">
                <div class="col-md-12">
                    <p>@Model.RG</p>
                </div>
            </div>
        </div>

    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <a href="~/Formulario/NovoFormulario" class="btn btn-default">Inserir novo</a>
        </div>

    </div>
</div>

